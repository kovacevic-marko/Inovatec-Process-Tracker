<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IPTXamarinForms"
             x:Class="IPTXamarinForms.MainPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Indigo">

            <ListView  x:Name="listClient" BackgroundColor="Indigo"  ItemTapped="listClient_ItemTapped" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid HorizontalOptions="Center" BackgroundColor="Indigo">
                                <Label x:Name="lbl" Text="{Binding ClientName}" FontFamily="Papyrus" TextColor="Azure" FontSize="36" BackgroundColor="Indigo"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>