<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPTXamarinForms.Views.TestPage"
             Title="Inovatec">
    
        <StackLayout>
        <TableView Intent="Settings" HorizontalOptions="Center" VerticalOptions="StartAndExpand">
            <TableRoot>
                <TableSection>
                    <EntryCell x:Name="userNickName"  Label="URL" Placeholder="Insert URL"  />
                    <SwitchCell x:Name="notificationEnabled" Text="Notifications" On="{Binding NotificationsEnabled}"
                                OnChanged="NotificationEnabled_OnOnChanged" />
                   
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
    
</ContentPage>